.row{:'ng-controller' => "HaikuCtrl"}
  .span12
    %h2.script-font
      Haiku - 
      = @haiku.name
  .row
    .span11.offset1
      %ul#showhaiku
        %li
          %ul.haikuLine
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line1_slot1_id]}", id:"#{@haiku.line1_slot1_id}"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line1_slot2_id]}", id:"#{@haiku.line1_slot2_id}"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line1_slot3_id]}", id:"#{@haiku.line1_slot3_id}"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line1_slot4_id]}", id:"#{@haiku.line1_slot4_id}"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line1_slot5_id]}", id:"#{@haiku.line1_slot5_id}"}
            
        %li
          %ul.haikuLine
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line2_slot1_id]}", id:"#{@haiku.line2_slot1_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line2_slot2_id]}", id:"#{@haiku.line2_slot2_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line2_slot3_id]}", id:"#{@haiku.line2_slot3_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line2_slot4_id]}", id:"#{@haiku.line2_slot4_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line2_slot5_id]}", id:"#{@haiku.line2_slot5_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line2_slot6_id]}", id:"#{@haiku.line2_slot6_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line2_slot7_id]}", id:"#{@haiku.line2_slot7_id}" ,alt:"Test"}
        %li  
          %ul.haikuLine
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line3_slot1_id]}", id:"#{@haiku.line3_slot1_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line3_slot2_id]}", id:"#{@haiku.line3_slot2_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line3_slot3_id]}", id:"#{@haiku.line3_slot3_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line3_slot4_id]}", id:"#{@haiku.line3_slot4_id}" ,alt:"Test"}
            %li.tile.big
              %img{:src=>"#{@nouns[@haiku.line3_slot5_id]}", id:"#{@haiku.line3_slot5_id}" ,alt:"Test"}
  .row
    .span11.well
      .offset1.span5
        Share this on Twitter!
        %a.twitter-share-button{href:"https://twitter.com/share", :'data-text'=>"Checkout this Icon Haiku", :'data-url' => "http://www.iconhaiku.com/share/#{@haiku.slug}",:'data-size'=>"large", :'data-hashtags' => "iconhaiku"}
          Tweet
          = render('twitter')
      .span4
        = link_to "<i class='icon-leaf icon-white'></i> Start Your Own".html_safe, create_path, {class: "btn btn-success"}
        
