= form_for @api_haiku do |f|
  - if @api_haiku.errors.any?
    #error_explanation
      %h2= "#{pluralize(@api_haiku.errors.count, "error")} prohibited this api_haiku from being saved:"
      %ul
        - @api_haiku.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
